<section class="title-fieldset resource-content flex-group-center flexrow desc">
    {{#each attributes}}
        <fieldset class="form-fields">
            <label class="resource-label-sm">
                <abbr title="{{localize this}}">
                    {{localize (lookup @root/attributeAbbr @key)}}
                </abbr>
                :
            </label>
            <span class="resource-label-m">D{{lookup @root/attributeValues @key}}</span>
        </fieldset>
    {{/each}}
</section>
<hr>
<section>
    <fieldset class="flexrow resource-content">
        <legend class="resource-text-m">{{localize 'FU.Primary'}}</legend>
        <span class="radio-container">{{radioBoxes 'primary' attributes checked=primary localize=true }}</span>
    </fieldset>
    <fieldset class="flexrow resource-content">
        <legend class="resource-text-m">{{localize 'FU.Secondary'}}</legend>
        <span class="radio-container">{{radioBoxes 'secondary' attributes checked=secondary localize=true }}</span>
    </fieldset>

    <fieldset class="flex-group-left resource-content">
        <legend class="resource-text-m">{{localize 'FU.DialogCheckDifficulty'}}</legend>
        <label class="resource-text-m">
            {{localize 'FU.DialogCheckModifier'}}
            <input name="modifier" type="number" value="{{modifier}}">
        </label>
        <label class="resource-text-m">
            {{localize 'FU.DialogCheckDifficulty'}}
            <input name="difficulty" type="number" value="{{difficulty}}" min="0">
        </label>
    </fieldset>
</section>
<hr>