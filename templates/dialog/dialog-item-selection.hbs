<main class="">
	<fieldset class="title-fieldset desc resource-content">
		<legend class="resource-label-full">
			<label class="resource-label-m">{{localize 'FU.Selection'}}</label>
		</legend>
		<div class="fu-item-grid flex-group-center fu-icon__radio-group">
			{{#each items as |item| }}
				{{log ../initial}}
				{{log item}}
				<label class="fu-item-card"
					   for="{{item.name}}"
					   data-index="{{@index}}"
					   data-name="{{item.name}}">
					<input type="checkbox"
						   name="selected"
						   id="{{item.name}}"
						   {{#if (eq item.name ../initial.name)}}checked="checked"{{/if}}
						   value="{{item.name}}">
					<img src="{{item.img}}" alt="{{item.name}}"/>
					<span class="">{{item.name}}</span>
				</label>
			{{/each}}
		</div>
		<span class="fu-form__message">
			{{{message}}}
		</span>
	</fieldset>
</main>
