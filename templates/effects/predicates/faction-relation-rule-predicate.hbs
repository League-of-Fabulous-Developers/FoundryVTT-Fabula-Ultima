<div class="fu-rule-element__property-row">
	<label class="fu-rule-element__property" data-tooltip="{{localize 'FU.TargetRelationHint'}}">
		<span>{{localize 'FU.FactionRelation'}}</span>
		<select name="{{pfuConcat path ".relation"}}">
			{{selectOptions options.factionRelation selected=predicate.relation localize=true}}
		</select>
	</label>

	<label class="fu-rule-element__property">
		<span>{{localize 'FU.Inclusive'}}</span>
		{{formGroup predicate.schema.fields.inclusive value=predicate.inclusive name=(pfuConcat path ".inclusive") }}
	</label>
</div>
