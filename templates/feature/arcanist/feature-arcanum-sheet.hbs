<div>
    <fieldset class="title-fieldset section-container desc resource-content">
        <label class="resource-label-m">
            {{localize 'FU.ClassFeatureArcanumDomains'}}
            <input type='text' name='system.data.domains' value='{{system.data.domains}}'
                   class="resource-inputs select-dropdown-full resource-text-m" />
        </label>
    </fieldset>
    <fieldset class="title-fieldset section-container desc resource-content">
        <div class="grid grid-2col gap-5 border-rc">
            <div>
                <label class="resource-label-m">{{localize 'FU.ClassFeatureArcanumMerge'}}</label>
				{{formInput dataFields.merge
							name="system.data.merge"
							value=system.data.merge
							toggled=true
							enriched=enrichedHtml.merge}}
            </div>
            <div>
                <label class="resource-label-m">{{localize 'FU.ClassFeatureArcanumDismiss'}}</label>
				{{formInput dataFields.dismiss
							name="system.data.dismiss"
							value=system.data.dismiss
							toggled=true
							enriched=enrichedHtml.dismiss}}
            </div>
        </div>
    </fieldset>
</div>