{{#if (eq actor.type "character")}}
<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Features"}}</label>
		</span>
	</header>

	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize 'FU.Name'}}</div>
			<div class="item-class">{{localize 'FU.ItemType'}}</div>
			<div class="item-controls">
				<a class="item-control item-create" aria-describedby="tooltip"
					data-tooltip="{{localize 'FU.MiscCreate'}}" data-type="miscAbility">
					<i class="fas fa-plus icon"></i>
					{{localize 'FU.Add'}}
				</a>
			</div>
		</li>
		{{#each abilities as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				<div class="item-name">
					<div class="item-image">
						<a class="rollable" data-roll-type="item">
							<div class="item-image-wrap">
								<img src="{{ item.img }}" data-tooltip="{{ item.name }}" class="item-image-res" />
							</div>
						</a>
					</div>
					<h4 class="click-item">
						<i class="fas fa-chevron-down" style="display: none"></i>
						<i class="fas fa-chevron-up" style="display: none"></i>
						{{ item.name }}
					</h4>
				</div>
				<div class="item-class">
					<span>{{capitalize item.system.subtype.value}}</span>
				</div>
				{{> "systems/fabulaultima/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<span class="item-quality">{{ item.quality }}</span>
			<div class="individual-description align-left">{{#if item.system.description}} {{editor
				item.system.description target="item.system.description" rollData=rollData button=false owner=owner
				editable=false}} {{/if}}</div>
		</li>
		{{/each}}
	</ol>
</section>
{{/if}}

<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Limits"}}</label>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize 'FU.Name'}}</div>
			<div class="item-zero">{{localize 'FU.LimitTrigger'}}</div>
			<div class="item-zero">{{localize 'FU.LimitEffect'}}</div>
			<div class="item-clock">{{localize 'FU.Clock'}}</div>
			<div class="item-controls">
				<div class="item-controls">
					<a class="item-control item-create" title="{{localize 'FU.LimitCreate'}}" data-type="zeroPower"> <i
							class="fas fa-plus icon"></i>{{localize 'FU.Add'}}</a>
				</div>
			</div>
		</li>
		{{#each zeroPowers as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				<div class="item-name">
					<div class="item-image">
						<a class="rollable" data-roll-type="item">
							<div class="item-image-wrap">
								<img src="{{ item.img }}" data-tooltip="{{ item.name }}" class="item-image-res" />
							</div>
						</a>
					</div>
					<h4 class="click-item">
						<i class="fas fa-chevron-down icon" style="display: none"></i>
						<i class="fas fa-chevron-up icon" style="display: none"></i>
						{{ item.name }}
					</h4>
				</div>
				<div class="item-zero">{{ item.zeroTrigger }}</div>
				<div class="item-zero">{{ item.zeroEffect }}</div>
				<div class="item-clock addable">
					<span data-resource="item.system.trigger.current">{{ item.system.trigger.current }}</span>
					<span>/</span>
					<span>{{ item.system.trigger.max }}</span>
				</div>
				{{> "systems/fabulaultima/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<div class="individual-description align-left">
				<div class="resource-label">{{ item.zeroTrigger }}</div>
				{{#if item.system.zeroTrigger.description}} {{editor item.system.zeroTrigger.description
				target="item.system.zeroTrigger.description" rollData=rollData button=false owner=owner editable=false}}
				{{/if}}
				<div class="resource-label">{{ item.zeroEffect }}</div>
				{{#if item.system.zeroEffect.description}} {{editor item.system.zeroEffect.description
				target="item.system.zeroEffect.description" rollData=rollData button=false owner=owner editable=false}}
				{{/if}}
			</div>
		</li>
		{{/each}}
	</ol>
</section>


<!-- Project Header -->
<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Projects"}}</label>
		</span>
		<!-- Zennit Header -->
		<span class="items-main zenit-container">
			<div class="zenit-content">
				<i class="fas fa-coin rollable ra-2x"></i>
				<label for="zenit-value" class="align-right zenit-text custom-input-style">
					<span>{{ system.resources.zenit.value }}z</span>
				</label>
			</div>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize "FU.Name"}}</div>
			<div class="item-duration">{{localize "FU.Progress"}}</div>
			<div class="item-attack">{{localize "FU.ProgressPerDay"}}</div>
			<div class="item-cost">{{localize "FU.Cost"}}</div>
			<div class="item-controls">
				<a class="item-control item-create" aria-describedby="tooltip"
					data-tooltip="{{localize 'FU.ProjectCreate'}}" data-type="project">
					<i class="fas fa-plus icon"></i>
					{{localize 'FU.Add'}}
				</a>
			</div>
		</li>
		{{#each projects as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				<div class="item-name">
					<div class="item-image">
						<a class="rollable" data-roll-type="item">
							<div class="item-image-wrap">
								<img src="{{ item.img }}" title="{{ item.name }}" class="item-image-res" />
							</div>
						</a>
					</div>
					<h4 class="click-item">
						<i class="fas fa-chevron-down" style="display: none"></i>
						<i class="fas fa-chevron-up" style="display: none"></i>
						{{ item.name }}
					</h4>
				</div>
				<div class="item-duration">{{ item.system.progress.current }} / {{ item.system.progress.max }}</div>

				<div class="item-progressPerDays">{{ item.system.progressPerDay.value }}</div>
				<div class="item-days">{{ item.system.days.value }}</div>

				<div class="item-cost">
					<span>{{ item.system.cost.value }}z</span>
				</div>
				{{> "systems/fabulaultima/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<span>{{ item.quality }}</span>
			<div class="individual-description">{{#if item.system.description}} {{editor item.system.description
				target="item.system.description" rollData=rollData button=false owner=owner editable=false}} {{/if}}
			</div>
		</li>
		{{/each}}
	</ol>
	</ol>