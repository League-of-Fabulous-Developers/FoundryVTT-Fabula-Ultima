<!-- Classes Section -->
<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Classes"}}</label>
		</span>
		<span class="items-main total-level grid grid-3col">
			<i class="fas fa-question-circle"></i>
			<span class="total-class-levels grid-span-2 flex-between"> {{ tlTracker.totalClass.current }} / {{
				tlTracker.totalClass.max }} </span>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize "FU.Name"}}</div>
			<div class="item-m">{{localize "FU.Level"}}</div>
			<div class="item-m end">
				<a class="item-control item-create" aria-describedby="tooltip" data-tooltip="Create class"
					data-type="class"> <i class="fas fa-plus icon"></i>{{localize "FU.Add"}} </a>
			</div>
		</li>
		{{#each classes as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				{{!-- Item Name--}}
				{{> "systems/fabulaultima/templates/actor/partials/actor-item-name.hbs" item=item}}
				<div class="item-m">
					<span data-resource="item.level">{{ item.level }}</span>
					<span>/</span>
					<span>{{ item.system.level.max }}</span>
				</div>
				{{!-- Item Control--}}
				{{> "systems/fabulaultima/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<div class="individual-description">{{#if item.system.description}} {{editor item.system.description
				target="item.system.description" rollData=rollData button=false owner=owner editable=false}} {{/if}}
			</div>
		</li>
		{{/each}}
	</ol>
</section>

<!-- Skills Section -->
<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Skills"}}</label>
		</span>
		<span class="items-main total-level grid grid-3col">
			<i class="fas fa-question-circle"></i>
			<span class="total-class-levels grid-span-2 flex-between"> {{ tlTracker.totalSkill.current }} / {{
				tlTracker.totalSkill.max }} </span>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize 'FU.Name'}}</div>
			<div class="item-lg">{{localize 'FU.SkillLevel'}}</div>
			{{!-- <div class="item-m">{{localize 'FU.SkillLevelAbbr'}}</div> --}}
