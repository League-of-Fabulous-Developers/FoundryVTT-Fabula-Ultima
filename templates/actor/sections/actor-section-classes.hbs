				<a class="item-control item-create" aria-describedby="tooltip"
					data-tooltip="{{localize 'FU.SkillCreate'}}" data-type="skill">
					<i class="fas fa-plus icon"></i>
					{{localize 'FU.Add'}}
				</a>
			</div>
		</li>
		{{#each skills as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow" style="height: fit-content;align-items: baseline;">
				<div class="flexcol">
					{{!-- Item Name--}}
					{{> "systems/fabulaultima/templates/actor/partials/actor-item-name.hbs" item=item}}
					{{#if item.quality}}
					<div class="item-quality">{{ item.quality }}</div>
					{{/if}}
				</div>
				<div class="item-lg sl-stars">
					{{ generateStars item.starCurrent item.starMax }}
				</div>
				{{!-- <div class="item-m">
					<span class="editable-skill-level" data-resource="item.system.level.value">{{
						item.system.level.value }}</span>
