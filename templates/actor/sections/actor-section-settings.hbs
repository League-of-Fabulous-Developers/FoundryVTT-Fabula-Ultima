<section class="desc affinities">
	<!-- Base Affinity Section -->
	<div class="desc-header resource-content flex-group-center">
		<label class="resource-label-l">{{localize 'FU.BaseAffinity'}}</label>
	</div>
	{{!-- Start Affinity Section --}}
	<div class="header-fields grid grid-9col" style="margin-top:10px;">
		{{#if system.affinities}}
		{{#each system.affinities as |affinity key|}}
		<div class="affinity resource-content flex-group-center flexcol">
			<label data-label="{{ affinity.label }}">
				<span class="resource-label-xl">
					<i class="{{ affinity.icon }} icon-aff"></i>
					<br />
					{{affinity.label}}
				</span>
			</label>
			<select value="{{ affinity.base }}" name="system.affinities.{{ key }}.base"
				class="resource-inputs select-dropdown" data-tooltip="{{ affinity.base }}: {{ affinity.affTypeBase }}"
				data-dtype="Number">
				{{#select affinity.base}}
				<option value="0">{{localize "FU.AffinityNormalAbbr"}}</option>
				<option value="-1">{{localize "FU.AffinityVulnurableAbbr"}}</option>
				<option value="1">{{localize "FU.AffinityResistanceAbbr"}}</option>
				<option value="2">{{localize "FU.AffinityImmuneAbbr"}}</option>
				<option value="3">{{localize "FU.AffinityAbsorptionAbbr"}}</option>
				<option value="4">{{localize "FU.AffinityRepulsionAbbr"}}</option>
				{{/select}}
			</select>
		</div>
		{{/each}}
		{{/if}}
	</div>
	{{!-- End Affinity Section --}}
</section>

