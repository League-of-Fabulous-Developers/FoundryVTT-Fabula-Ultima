<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Ritual"}}</label>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize "FU.Rituals"}}</div>
			<div class="item-m">{{localize "FU.MindPointCost"}}</div>
			<div class="item-xs">{{localize "FU.DLAbbr"}}</div>
			<div class="item-xs">{{localize "FU.Clock"}}</div>
			<div class="item-m end">
				<a class="item-control item-create" aria-describedby="tooltip"
					data-tooltip="{{localize 'FU.RitualCreate'}}" data-type="ritual">
					<i class="fas fa-plus icon"></i>
					{{localize 'FU.Add'}}
				</a>
			</div>
		</li>
		{{#each rituals as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				{{!-- Item Name--}}
				{{> "systems/projectfu/templates/actor/partials/actor-item-name.hbs" item=item}}
				<div class="item-m">{{ item.mpCost }}</div>
				<div class="item-xs">{{ item.dLevel }}</div>
				<div class="item-xs">{{ item.clock }}</div>
				{{!-- Item Control--}}
				{{> "systems/projectfu/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<span>{{ item.quality }}</span>
			<div class="individual-description">{{#if item.system.description}} {{editor item.system.description
				target="item.system.description" rollData=rollData button=false owner=owner editable=false}} {{/if}}
			</div>
		</li>
		{{/each}}
	</ol>
</section>

<section class="desc">
	<header class="items-main-header">
		<span class="items-main">
			<label class="items-label">{{localize "FU.Spell"}}</label>
		</span>
	</header>
	<ol class="items-list">
		<li class="item flexrow items-header">
			<div class="item-name">{{localize 'FU.Spells'}}</div>
			<div class="item-m">{{localize 'FU.Duration'}}</div>
			<div class="item-lg">{{localize 'FU.Target'}}</div>
			<div class="item-m">{{localize 'FU.MindPointCost'}}</div>
			<div class="item-m end">
				<a class="item-control item-create" aria-describedby="tooltip"
					data-tooltip="{{localize 'FU.SpellCreate'}}" data-type="spell"> <i
						class="fas fa-plus icon"></i>{{localize 'FU.Add'}} </a>
			</div>
		</li>
		{{#each spells as |item id|}}
		<li class="item" data-item-id="{{ item._id }}">
			<div class="flexrow">
				{{!-- Item Name--}}
				{{> "systems/projectfu/templates/actor/partials/actor-item-name.hbs" item=item}}
				<div class="item-m">{{ item.duration }}</div>
				<div class="item-lg">{{ item.target }}</div>
				<div class="item-m">{{ item.mpCost }}</div>
				{{!-- Item Control--}}
				{{> "systems/projectfu/templates/actor/partials/actor-control.hbs" item=item}}
			</div>
			<div class="individual-description align-left">{{#if item.system.description}} {{editor
				item.system.description target="item.system.description" rollData=rollData button=false owner=owner
				editable=false}} {{/if}}</div>
		</li>
		{{/each}}
	</ol>
</section>