<div class="tab {{tab.cssClass}}" data-group="primary" data-tab="stats">
	{{#if isCharacter}}
		<!-- Traits Section -->
		<section class="section-container desc grid-span-3 gap-5">
			<div class="grid grid-3col flex-group-center" style="display: flex;">
				<div class="traits compact resource-content">
					<label>
						<span class="resource-label-l">{{localize 'FU.Identity'}}: </span>
						<span class="resource-text-m">{{ system.resources.identity.name }}</span>
					</label>
				</div>
				<div class="traits compact resource-content">
					<label>
						<span class="resource-label-l">{{localize 'FU.Theme'}}: </span>
						<span class="resource-text-m">{{ system.resources.theme.name }}</span>
					</label>
				</div>
				<div class="traits compact resource-content">
					<label>
						<span class="resource-label-l">{{localize 'FU.Origin'}}: </span>
						<span class="resource-text-m">{{ system.resources.origin.name }}</span>
					</label>
				</div>
			</div>
		</section>
		<section class="body-section grid grid-4col">
			<aside class="sidebar flex-group-center">
				{{!-- Bond Section --}}
				<fieldset class="section-container title-fieldset desc resource-content">
					<legend class="resource-label-m">
						{{localize 'FU.Bonds'}}
					</legend>
					<div class="bonds">
						{{#each system.bonds as |bond bondIndex|}}
							<div class="bond-row flexrow mb-2">
								<label class="resource-text-sm flex-group-left flex-grow">
									<strong>
										{{#if bond.name}}
											{{bond.name}}
										{{else}}
											{{localize 'FU.NoItem'}}
										{{/if}}
									</strong>
								</label>
								<label class="resource-text-sm bond-strength flex0" data-tooltip="
                                            {{#if (lookup @root.FU.bonds.admInf bond.admInf)}}
									{{localize (lookup @root.FU.bonds.admInf bond.admInf)}}<br>
                                            {{/if}}
									{{#if (lookup @root.FU.bonds.loyMis bond.loyMis)}}
										{{localize (lookup @root.FU.bonds.loyMis bond.loyMis)}}<br>
                                            {{/if}}
									{{#if (lookup @root.FU.bonds.affHat bond.affHat)}}
										{{localize (lookup @root.FU.bonds.affHat bond.affHat)}}
									{{/if}}
                                        ">
									{{ bond.strength }}
								</label>
							</div>
						{{/each}}
					</div>
				</fieldset>
				{{!-- Action Buttons --}}
				{{> "systems/projectfu/templates/actor/partials/actor-actions.hbs" actor=actor}}
				{{!-- Vehicle Section --}}
				{{> "systems/projectfu/templates/actor/partials/actor-vehicle.hbs"}}
				{{!-- Garden Section --}}
				{{> "systems/projectfu/templates/actor/partials/actor-garden.hbs"}}
				{{!-- Clock Section --}}
				{{> "systems/projectfu/templates/actor/partials/actor-clocks.hbs" actor=actor}}
			</aside>
			<main class="grid-span-3">
				{{!-- Bond Section --}}
				{{!-- Favorite Section --}}
				{{>"systems/projectfu/templates/actor/partials/actor-favorite.hbs" groups=systemData.bond
				 dtypes=dtypes actor=actor}}
			</main>
		</section>
	{{/if}}

	{{#if isNPC}}
		<section class="body-section grid grid-4col">
			<aside class="sidebar flex-group-center">
				{{!-- Action Buttons --}}
				{{>"systems/projectfu/templates/actor/partials/actor-actions.hbs" actor=actor}}

				<fieldset class="section-container title-fieldset desc resource-content">
					<legend class="resource-label-m">
						{{localize 'FU.Villain'}}
					</legend>
					<div class="flex-group-center">
						<div class="resource-content">
							<label class="resource-label-sm">{{localize 'FU.Phase'}}</label>
							<input type="number" name="system.phases.value" value="{{ system.phases.value }}"
								   data-dtype="Number" class="resource-inputs bonus" />
						</div>
						<div class="resource-content">
							<label class="resource-label-sm">{{localize 'FU.Multipart'}}</label>
							<input type="text" name="system.multipart.value" value="{{ system.multipart.value }}"
								   data-dtype="String" class="resource-inputs bonus" />
						</div>
					</div>
				</fieldset>
				{{!-- Clock Section --}}
				{{> "systems/projectfu/templates/actor/partials/actor-clocks.hbs" actor=actor}}
			</aside>
			<main class="stats-container grid-span-3">
				<section class="section-container npc-border-col desc">
					<li class="flexrow flex-group-center desc-header resource-content">
						<label class="resource-label-l">{{localize 'FU.Traits'}}</label>
						<input class="traitdesc flex3" type="text" name="system.traits.value"
							   value="{{ system.traits.value }}" placeholder="{{localize 'FU.Traits'}}"
							   data-dtype="String" />
					</li>
					<section class="flex2 npc-desc">
						{{#if (eq (getGameSetting 'optionNPCNotesTab') true)}}
							{{editor enrichedHtml.description target="system.description"
									 engine="prosemirror"
									 rollData=rollData button=false owner=owner editable=false }}
						{{else}}
							{{editor enrichedHtml.description target="system.description"
									 engine="prosemirror"
									 rollData=rollData button=true owner=owner editable=editable }}
						{{/if}}
					</section>
				</section>

				{{#if (getGameSetting 'showAssociatedTherioforms')}}
					<fieldset class="desc resource-content title-fieldset associated-therioforms">
						<legend class="resource-label-m">
							<label>{{localize 'FU.ClassFeatureTherioformAssociatedTherioforms'}}</label>
						</legend>
						<div>
							<input type="text" name="system.associatedTherioforms"
								   value="{{system.associatedTherioforms}}"
								   class="resource-inputs select-dropdown-full resource-text-m">
						</div>
					</fieldset>
				{{/if}}

				<!-- Favorite Section -->
				{{> "systems/projectfu/templates/actor/partials/actor-favorite.hbs" groups=systemData.bond
				 dtypes=dtypes actor=actor}}
			</main>
		</section>
	{{/if}}
</div>

