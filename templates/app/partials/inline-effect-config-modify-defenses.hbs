<div>
    <label>
        <span>{{localize "FU.InlineEffectConfigImproveDefensesDefense"}}</span>
        <select name="guided.changes.{{@index}}.defense" class="resource-current-input">
            {{selectOptions templateData.defenses selected=defense localize=true labelAttr="name"}}
        </select>
    </label>
</div>
<div>
    <label>
        <span>{{localize "FU.InlineEffectConfigImproveDefensesValue"}}</span>
        <input type="number" name="guided.changes.{{@index}}.value"
               value="{{#if value includeZero=true}}{{value}}{{else}}0{{/if}}"
			   class="resource-current-input">
    </label>
</div>