<div class="bar-container">
    <div class="resource-value">
        <div class="resource-label">
            <span>MP</span>
        </div>
        <div class="resource-text">
            <span>{{ this.actor.system.resources.mp.value }} / {{ this.actor.system.resources.mp.max }}</span>
        </div>
    </div>
    <div class="bar bar-progress" data-tooltip="{{localize 'FU.MindPoints'}}">
        <div class="bar-progress-bar bar-mp"
            style="width: {{calculatePercentage this.actor.system.resources.mp.value this.actor.system.resources.mp.max}};"></div>
        <span class="bar-value"></span>
    </div>  
    <div class="resource-value-compact">
        <div class="resource-text">
            <span>{{ this.actor.system.resources.mp.value }} / {{ this.actor.system.resources.mp.max }} MP</span>
        </div>
    </div>
</div>