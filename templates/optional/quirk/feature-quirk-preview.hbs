<div class="item-full start gap-2 resource-content">
    <span class="description-effect">{{system.summary.value}}</span>
</div>

{{!-- Resource Points --}}
{{#if system.data.hasResource.value}}
    <div class="item-m inline-desc" style="text-align: center; padding: 1px;">
        <label class="item-quality resource-text-sm" style="flex-grow: 2;">{{ system.data.rp.name }}</label>
        <div class="resource-text-t buttons-inc" style="padding: 0 4px;">
			<a class="decrement-button"
			   data-tooltip="{{localize 'FU.DecreaseTooltip'}} ({{item.system.data.rp.step}})"
			   data-action="modifyResource"
			   data-data-path="system.data.rp"
			   data-resource-action="decrement">
				-
			</a>
            <span data-resource="item.rp">{{ system.data.rp.current }}</span>
            {{#if (gt system.data.rp.max 0)}}
                <span>/</span>
                <span>{{ system.data.rp.max }}</span>
            {{/if}}
			<a class="increment-button"
			   data-tooltip="{{localize 'FU.IncreaseTooltip'}} ({{item.system.data.rp.step}})"
			   data-action="modifyResource"
			   data-data-path="system.data.rp"
			   data-resource-action="increment">
				+
			</a>
        </div>
    </div>
{{/if}}

{{!-- Clocks --}}
{{#if system.data.hasClock.value}}
	{{progress item 'system.data.progress' type='featureCounter'}}
{{/if}}