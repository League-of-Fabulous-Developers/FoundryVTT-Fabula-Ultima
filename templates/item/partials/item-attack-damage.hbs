{{#> 'systems/projectfu/templates/common/fieldset-toggle.hbs'
 name="system.hasDamage"
 value=system.hasDamage
 icon="fas fa-dice icon"
 label=(localize "FU.Damage")
}}
	<div class="grid grid-2col">
		<div class="resource-content flexcol flex-group-center">
			<label for="system.rollInfo.impdamage.type.value"
				   class="resource-label-m flexlarge">{{localize
			 'FU.DamageType'}} </label>
			<select name="system.damageType.value"
					class="resource-inputs select-dropdown-m">
				{{selectOptions damageTypes selected=system.damageType.value sort=true localize=true}}
			</select>
		</div>
		<div class="resource-content flexcol flex-group-center">
			<label class="resource-label-m">{{localize 'FU.Bonus'}}</label>
			<input type="number" name="system.damage.value" value="{{ system.damage.value }}"
				   class="resource-inputs" data-dtype="Number" />
		</div>
	</div>
{{/ 'systems/projectfu/templates/common/fieldset-toggle.hbs'}}
