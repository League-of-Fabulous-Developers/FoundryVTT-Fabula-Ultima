{{#> 'systems/projectfu/templates/common/fieldset-toggle.hbs'
 name="system.damage.enabled"
 value=system.damage.enabled
 icon="fas fa-dice icon"
 label=(localize "FU.Damage")
}}
	<div class="resource-content" style="background: var(--color-background); border-style: inset; border-width: thin; padding: 4px; width: 100%;">
		<label class="resource-label-m flexlarge">{{localize 'FU.DamageType'}}</label>
		{{formGroup system.schema.fields.damage.fields.types value=system.damage.types options=damageTypeOptions name="system.damage.types" classes="resource-label-m stacked"}}
	</div>
	<div class="grid grid-2col">
		<div class="resource-content flexcol flex-group-center">
			<label class="resource-label-m">
				{{localize 'FU.Amount'}}
				<input type="number" name="system.damage.amount" value="{{ system.damage.amount }}" class="resource-inputs"/>
			</label>
		</div>
		<div class="resource-content flexcol flex-group-center">
			<label class="resource-label-m">
				{{localize 'FU.OnApply'}}
				<input type="text" name="system.damage.onApply" value="{{ system.damage.onApply }}"  class="resource-inputs select-dropdown-l" />
			</label>
		</div>
	</div>

{{/ 'systems/projectfu/templates/common/fieldset-toggle.hbs'}}
