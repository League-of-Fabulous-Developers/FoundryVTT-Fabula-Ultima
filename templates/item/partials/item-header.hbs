<header class="sheet-header desc">
    <div class="combine-header">
        <img class="profile-img" src="{{ item.img }}" data-edit="img" title="{{ item.name }}" />
        <div class="header-fields">
            <div class="header-start grid grid-6col">
                <div class="charname-container flexrow grid-span-4">
                    <h2 class="charname" style="flex: 4;">
                        <input name="name" type="text" value="{{ item.name }}" placeholder="Name"
                               data-tooltip="{{ item.name }}" class="resource-inputs-charname auto-shrink" />
                    </h2>
                    <h4 class="martials">
                        <input id="martial-checkbox" type="checkbox" style="display: none;" {{#if
                         system.isMartial.value}}checked{{/if}}>
                        <label for="martial-checkbox">
                            {{#if system.isMartial}}
                                <img id="martial-header"
                                     class="icon-aff {{#if
                                      system.isMartial.value}}fus-martial active{{else}}ful-martial{{/if}}"
                                     tabindex="0" aria-hidden="true"
                                     onkeypress="toggleCheckbox(event, 'martial-checkbox')">
                            {{/if}}
                        </label>

                        <input id="offensive-checkbox" type="checkbox" style="display: none;" {{#if
                         system.isOffensive.value}}checked{{/if}}>
                        <label for="offensive-checkbox">
                            {{#if system.isOffensive}}
                                <img id="offensive-header"
                                     class="icon-aff {{#if
                                      system.isOffensive.value}}fus-offensive active{{else}}ful-offensive{{/if}}"
                                     tabindex="0" aria-hidden="true"
                                     onkeypress="toggleCheckbox(event, 'offensive-checkbox')">
                            {{/if}}
                        </label>
                    </h4>

                </div>

                {{!-- Part --}}
                <span class="flexrow grid-span-2 gap-2"
                      style="border-bottom: 2px solid; border-image: linear-gradient(to right, #bfb4c5, #e6e2e8) 1; border-left: rgb(255, 173, 200) 3px solid;">

					{{!-- Item Type --}}
                    <span class="resource-content levelup-container flexcol flex-group-center">
						<label class="resource-label-m" for="item.type"> <i
                         class="fas fa-chart-simple icon"></i>{{localize 'FU.ItemType'}}</label>
						<input type="text" name="item.type" value="{{localize (translate item.type)}}"
                               data-dtype="String" class="resource-inputs" disabled
                               style="border-radius: 0 12px 0 0;" />
					</span>

                    {{!-- Source --}}
                    <span class="resource-content levelup-container flexcol flex-group-center"
                          style="border-top-right-radius: 12px;">
						<label class="resource-label-m rollable" id="pdfLink">
                            {{localize 'FU.Source'}} </label>
						<input type="text" name="system.source.value" value="{{ system.source.value }}"
                               data-dtype="String" style="border-radius: 12px 0 0;" class="resource-inputs" />
					</span>
				</span>
            </div>

            {{!-- Center Header --}}
            <div class="item-header header-field header-center grid grid-3col desc">
                <div class="resource-content summary grid-span-3">
                    <label class="resource-label-sm" for="system.summary.value"> <i
                     class="fas fa-chart-simple icon"></i>{{localize 'FU.Summary'}} </label>
                    <blockquote><input type="text" name="system.summary.value" value="{{ system.summary.value }}"
                                       data-dtype="String" class="flex-group-center resource-inputs summary"
                                       data-tooltip="{{ system.summary.value }}" /></blockquote>
                </div>

                {{!-- Key Attributes --}}
                <div class="resource-content summary grid-span-3">
                    <label class="resource-label-sm" style="position: sticky;" for="system.summary.value"> <i
                     class="fas fa-chart-simple icon"></i>{{localize
                     'FU.AttributesKey'}}
                    </label>
                    <div class="grid grid-3col">
                        {{#if (eq item.type "weapon")}}
                            {{> "systems/projectfu/templates/item/partials/item-weapon-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "shield")}}
                            {{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "armor")}}
                            {{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "accessory")}}
                            {{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "consumable")}}
                            {{> "systems/projectfu/templates/item/partials/item-consumable-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "treasure")}}
                            {{> "systems/projectfu/templates/item/partials/item-treasure-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "spell")}}
                            {{> "systems/projectfu/templates/item/partials/item-spell-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "class")}}
                            {{> "systems/projectfu/templates/item/partials/item-class-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "skill")}}
                            {{> "systems/projectfu/templates/item/partials/item-skill-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "heroic")}}
                            {{> "systems/projectfu/templates/item/partials/item-heroic-header.hbs" dtypes=dtypes}}
                        {{else if (eq item.type "zeroPower")}}
                            {{> "systems/projectfu/templates/item/partials/item-progress-header.hbs" dtypes=dtype }}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="header-fields grid grid-3col" style="width: 100%">
        {{!-- Sub Type --}}
        <span id="subtype-section" class="resource-content flexcol flex-group-center desc">
			<label class="resource-label-sm" for="item.type"> <i class="fas fa-chart-simple icon"></i>{{localize
             'FU.SubType'}}</label>
            {{#if (eq item.type "heroic")}}
                <span>
				<select name="system.subtype.value" data-dtype="String"
                        class="resource-inputs select-dropdown-l">
                    {{selectOptions heroicType selected=system.subtype.value sort=true localize=true}}
                </select>
			</span>
            {{else if (eq item.type "miscAbility")}}
                <span>
				<select name="system.subtype.value" data-dtype="String"
                        class="resource-inputs select-dropdown-l">
                    {{selectOptions miscCategories selected=system.subtype.value sort=true localize=true}}
                </select>
			</span>
            {{else if (eq item.type "consumable")}}
                <span>
				<select name="system.subtype.value" data-dtype="String"
                        class="resource-inputs select-dropdown-l">
                    {{selectOptions consumableType selected=system.subtype.value sort=true localize=true}}
                </select>
			</span>
            {{else if (eq item.type "treasure")}}
                <span>
				<select name="system.subtype.value" data-dtype="String"
                        class="resource-inputs select-dropdown-l">
                    {{selectOptions treasureType selected=system.subtype.value sort=true localize=true}}
                </select>
			</span>
            {{/if}}
		</span>

        {{!-- Sheet Tab Navigation --}}
        <nav id="item-navbar" class="sheet-tabs tabs desc flexrow grid-span-2" data-group="primary"
             style="align-self: stretch;">
            <a class="item tab-style" data-tab="description">{{localize 'FU.Description'}}</a>
            <a class="item tab-style" data-tab="attributes">{{localize 'FU.Attributes'}}</a>
            <a class="item tab-style" data-tab="effects">{{localize 'FU.Effects'}}</a>
        </nav>
    </div>
</header>