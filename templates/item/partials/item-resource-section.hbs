{{#> 'systems/projectfu/templates/common/fieldset-toggle.hbs'
 name="system.resource.enabled"
 value=system.resource.enabled
 icon="fas fa-wrench icon"
 label=(localize "FU.Resource")
}}
	<div class="grid grid-2col">
		<div class=" flexcol flex-group-center">
			<label class="resource-label-m flexlarge">
				{{localize 'FU.Resource'}}
				<select name="system.resource.type" class="resource-inputs select-dropdown-m">
					{{selectOptions resources selected=system.resource.type sort=true localize=true}}
				</select>
			</label>
		</div>
		<div class="resource-content flexcol flex-group-center">
			<label class="resource-label-m">
				{{localize 'FU.Amount'}}
				<input type="text" class="resource-inputs select-dropdown-l" name="system.resource.amount" value="{{ system.resource.amount }}"  />
			</label>
		</div>
	</div>

{{/ 'systems/projectfu/templates/common/fieldset-toggle.hbs'}}
