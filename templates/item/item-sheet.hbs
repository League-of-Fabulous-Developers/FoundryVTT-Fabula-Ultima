<form class="{{ cssClass }} backgroundstyle" autocomplete="off">
    {{> "systems/projectfu/templates/item/partials/item-header.hbs" dtypes=dtypes}}
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize 'FU.Description'}}</a>
        <a class="item" data-tab="attributes">{{localize 'FU.Attributes'}}</a>
        <a class="item" data-tab="effects">{{localize 'FU.Effects'}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab desc" data-group="primary" data-tab="description">
            {{editor enrichedHtml.description target="system.description" engine="prosemirror" rollData=rollData
                     button=true owner=owner editable=editable }}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">{{!-- As you add new fields, add them in
			here! --}}</div>
    </section>
</form>