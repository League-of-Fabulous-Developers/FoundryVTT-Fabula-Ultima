<div class="chat-desc chat-slotted-technospheres">
	<details>
		<summary>{{localize "FU.Technospheres"}}</summary>
		{{#each system.slotted}}
			{{#if (eq type "mnemosphere")}}
				<div>
					<strong>{{name}}</strong>
					<br>
					<span>{{localize "FU.Class"}}: {{system.class}}</span>
				</div>
			{{/if}}

			{{#if (eq type "hoplosphere")}}
				<div>
					<strong>{{name}}</strong>
					{{#each system.activeEffects}}
						<div class="flexrow">
							<span class="flex0"><i class="fa fa-fw {{#if (and (gt coagulationLevel 1) (gte ../system.coagLevel coagulationLevel))}}fa-droplet{{/if}}"></i></span>
							<span>{{summary}}</span>
						</div>
					{{/each}}
				</div>
			{{/if}}
		{{/each}}
	</details>
	<div>
	{{#each system.slotted}}
		{{#if (eq type "mnemosphere")}}
			<div>
				<strong>{{name}}</strong>
			</div>
		{{/if}}

		{{#if (eq type "hoplosphere")}}
			<div>
				<strong>{{name}}</strong>
			</div>
		{{/if}}
	{{/each}}
	</div>
</div>