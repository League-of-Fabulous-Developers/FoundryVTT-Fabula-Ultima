{{!-- Resource Points --}}
{{#if system.hasResource.value}}
	{{#with system.rp}}
	<div class="item-m inline-desc" style="text-align: center; padding: 1px;">
		{{#if displayName}}
			<label class="item-quality resource-text-sm" style="flex-grow: 2;">{{ displayName }}</label>
		{{/if}}
		<div class="resource-text-t buttons-inc" style="padding: 0 4px;">
			<a class="decrement-button"
			   data-action="updateSkillResource"
			   data-resource-action="decrement"
			   data-tooltip="{{localize 'FU.DecreaseTooltip'}} ({{step}})">-</a>
			<span data-resource="item.rp">{{ current }}</span>
			{{#if (gt max 0)}}
				<span>/</span>
				<span>{{ max }}</span>
			{{/if}}
			<a class="increment-button"
			   data-action="updateSkillResource"
			   data-resource-action="increment"
			   data-tooltip="{{localize 'FU.IncreaseTooltip'}} ({{step}})">+</a>
		</div>
	</div>
	{{/with}}
{{/if}}
{{!-- Star Tracker--}}
<div class="skillLevel item-lg sl-stars">
	{{#each skillArr}}
		<a class="star-radio-container" data-action="setSkillLevel" data-level="{{level}}">
			<label class="star-label {{#if reached}}fus-sl-star{{else}}ful-sl-star{{/if}}"></label>
		</a>
	{{/each}}
</div>