<form class="{{ cssClass }} backgroundstyle" autocomplete="off">
	{{> "systems/projectfu/templates/item/partials/item-header.hbs" dtypes=dtypes}}

	{{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Description Tab --}}
		<div class="tab desc" data-group="primary" data-tab="description">{{editor system.description
			target="system.description" rollData=rollData button=true owner=owner editable=editable}}</div>

		{{!-- Attributes Tab --}}
		<div class="tab attributes" data-group="primary" data-tab="attributes">
			<div class="item-settings resource-content">
				{{> "systems/projectfu/templates/item/partials/item-controls.hbs" actor=actor}}
				<label class="checkbox resource-label-sm">
					<span>{{localize 'FU.FlawStatus'}}</span>
					<input type="checkbox" name="system.isFlawed.value" {{ checked system.isFlawed.value }} />
				</label>
			</div>
			<div class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.GeneralInfo'}}</label>
				</div>
				<div class="grid grid-3col card-style">
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Potency'}}</label>
						<select class="resource-inputs select-dropdown-m" value="{{ system.potency.value }}"
							name="system.potency.value">
							{{#select system.potency.value}}
							<option value="minor">Minor</option>
							<option value="medium">Medium</option>
							<option value="major">Major</option>
							<option value="extreme">Extreme</option>
							{{/select}}
						</select>
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Area'}}</label>
						<select class="resource-inputs select-dropdown-m" value="{{ system.area.value }}"
							name="system.area.value">
							{{#select system.area.value}}
							<option value="individual">Individual</option>
							<option value="small">Small</option>
							<option value="large">Large</option>
							<option value="huge">Huge</option>
							{{/select}}
						</select>
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Uses'}}</label>
						<select class="resource-inputs select-dropdown-m" value="{{ system.use.value }}"
							name="system.use.value">
							{{#select system.use.value}}
							<option value="consumable">{{localize 'FU.Consumable'}}</option>
							<option value="permanent">{{localize 'FU.Permanent'}}</option>
							{{/select}}
						</select>
					</div>
				</div>

				<div class="grid grid-3col">
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.NumTinker'}}</label>
						<input class="resource-inputs" type="text" name="system.numTinker.value"
							value="{{ system.numTinker.value }}" data-dtype="Number" />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.NumHelper'}}</label>
						<input class="resource-inputs" type="text" name="system.numHelper.value"
							value="{{ system.numHelper.value }}" data-dtype="Number" />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.LvlVision'}}</label>
						<input class="resource-inputs" type="text" name="system.lvlVision.value"
							value="{{ system.lvlVision.value }}" data-dtype="Number" />
					</div>
				</div>

				<div class="grid grid-3col">
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Progress'}}</label>
						<input type="text" name="system.progress.max" value="{{ system.progress.max }}"
							data-dtype="Number" disabled />
					</div>

					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.ProgressPerDay'}}</label>
						<input type="text" name="system.progressPerDay.value" value="{{ system.progressPerDay.value }}"
							data-dtype="Number" disabled />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Days'}}</label>
						<input type="text" name="system.days.value" value="{{ system.days.value }}" data-dtype="Number"
							disabled />
					</div>
				</div>

				<div class="grid grid-2col">
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Cost'}}</label>
						<input type="text" name="system.cost.value" value="{{ system.cost.value }}" data-dtype="Number"
							disabled />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Discount'}}</label>
						<input type="text" name="system.discount.value" value="{{ system.discount.value }}"
							data-dtype="Number" disabled />
					</div>
				</div>
			</div>

			<section class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.ProjectStatus'}}</label>
				</div>
				<div class="grid grid-4col card-style">
					<div class="resource-content flexrow flex-center flex-between buttons-inc combineBar">
						<label class="resource-label-sm">{{localize 'FU.CurrentProgress'}}</label>
						<input type="number" class="resource-inputs select-dropdown-m" name="system.progress.current"
							value="{{ system.progress.current }}" data-dtype="Number" />
						/
						<label for="system.progress.max" data-dtype="Number">{{ system.progress.max }}</label>
					</div>
				</div>
			</section>
		</div>
	</section>
</form>