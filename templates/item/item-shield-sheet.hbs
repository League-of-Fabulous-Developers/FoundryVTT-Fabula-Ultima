<form class="{{ cssClass }} backgroundstyle" autocomplete="off">
	{{> "systems/projectfu/templates/item/partials/item-header.hbs" dtypes=dtypes}}

	{{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Description Tab --}}
		<div class="tab desc" data-group="primary" data-tab="description">{{editor enrichedHtml.description
			target="system.description" rollData=rollData button=true owner=owner editable=editable}}</div>

		{{!-- Attributes Tab --}}
		<div class="tab attributes" data-group="primary" data-tab="attributes">
			<div class="item-settings resource-content">
				{{> "systems/projectfu/templates/item/partials/item-controls.hbs" actor=actor}}
				<label class="checkbox resource-label-sm"> <span>{{localize "FU.HRZeroStatus"}}</span><input
						type="checkbox" name="system.rollInfo.useWeapon.hrZero.value" {{ checked
						system.rollInfo.useWeapon.hrZero.value }} /> </label>
				<label class="checkbox resource-label-sm"> <span>{{localize 'FU.IsMartial'}}</span><input
						type="checkbox" name="system.isMartial.value" {{ checked system.isMartial.value }} /> </label>
				<label class="checkbox resource-label-sm"> <span>{{localize 'FU.ShieldDualStatus'}}</span><input
						type="checkbox" name="system.isDualShield.value" {{ checked system.isDualShield.value }} />
				</label>
			</div>

			<section class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.GeneralInfo'}}</label>
				</div>
				<div class="grid grid-4col card-style">
					<div class="resource-content flexcol grid-span-3 flex-group-center card-style">
						<label class="resource-label-m">{{localize 'FU.Quality'}}</label>
						<input type="text" name="system.quality.value" value="{{ system.quality.value }}"
							class="resource-inputs select-dropdown-full grid-span-4" />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Cost'}}</label>
						<input type="number" name="system.cost.value" value="{{ system.cost.value }}"
							data-dtype="Number" class="resource-inputs select-dropdown-m" />
					</div>
				</div>
			</section>

			{{#if (or system.isBehavior.value system.isDualShield.value)}}
			<section class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.OptionalFeats'}}</label>
				</div>
				<div class="grid grid-4col card-style">
					{{#if (and (eq actor.type "npc") system.isBehavior.value)}}
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.BehaviorWeight'}}</label>
						<input type="number" name="system.weight.value" value="{{ system.weight.value }}"
							data-dtype="Number" class="resource-inputs select-dropdown-m" />
					</div>
					{{/if}} {{#if system.isDualShield.value}}
					<div class="resource-content flexcol flex-group-center">
						<label for="system.category.value" class="resource-label-m flexlarge align-left">{{localize
							'FU.Category'}}</label>
						<select name="system.category.value" class="resource-inputs select-dropdown-m">
							<option value="brawling">Brawling</option>
							<option value="sword">Sword</option>
							<option value="thrown">Thrown</option>
							<option value="spear">Spear</option>
							<option value="heavy">Heavy</option>
							<option value="flail">Flail</option>
							<option value="firearm">Firearm</option>
							<option value="dagger">Dagger</option>
						</select>
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label for="system.hands.value" class="resource-label-m flexlarge align-left">{{localize
							'FU.Hand'}}</label>
						<select value="{{ system.hands.value }}" name="system.hands.value"
							class="resource-inputs select-dropdown-m">
								{{selectOptions handedness selected=system.hands.value sort=true localize=true}}
						</select>
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label for="system.type.value" class="resource-label-m flexlarge align-left">{{localize
							'FU.ItemType'}}</label>
						<select value="{{ system.type.value }}" name="system.type.value"
							class="resource-inputs select-dropdown-m">
								{{selectOptions wpnType selected=system.type.value sort=true localize=true}}
						</select>
					</div>
					{{/if}}
				</div>
			</section>
			{{/if}} {{#if system.isDualShield.value}}
			<section class="grid grid-2col">
				<section class="flex1 flex-group-center desc flex-row">
					<div class="desc-header resource-content">
						<label class="resource-label-m"><i class="fas fa-dice icon"></i>{{localize
							'FU.Accuracy'}}</label>
					</div>
					<div class="grid grid-3col card-style">
						<div class="resource-content flexcol flex-group-center">
							<label for="system.attributes.primary.value" class="resource-label-m">{{localize
								'FU.Primary'}} </label>
							<select value="{{ system.attributes.primary.value }}" name="system.attributes.primary.value"
								class="resource-inputs select-dropdown">
								{{selectOptions attrAbbr selected=system.attributes.primary.value sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label for="system.attributes.secondary.value" class="resource-label-m">{{localize
								'FU.Secondary'}} </label>
							<select value="{{ system.attributes.secondary.value }}"
								name="system.attributes.secondary.value" class="resource-inputs select-dropdown">
								{{selectOptions attrAbbr selected=system.attributes.secondary.value sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label class="resource-label-m">{{localize 'FU.Bonus'}}</label>
							<input type="number" name="system.accuracy.value" value="{{ system.accuracy.value }}"
								class="resource-inputs" data-dtype="Number" />
						</div>
					</div>
				</section>

				<section class="flex2 flex-group-center desc">
					<div class="desc-header resource-content">
						<label class="resource-label-m"><i class="fas fa-bullseye icon"></i>{{localize 'FU.Damage'}}
						</label>
					</div>
					<div class="grid grid-2col card-style">
						<div class="resource-content flexcol flex-group-center">
							<label for="system.rollInfo.impdamage.type.value"
								class="resource-label-m flexlarge">{{localize 'FU.DamageType'}} </label>
							<select value="{{ system.damageType.value }}" name="system.damageType.value"
								class="resource-inputs select-dropdown-m">
								{{selectOptions damageTypes selected=system.damageType.value blank='Untyped' sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label class="resource-label-m">{{localize 'FU.Bonus'}}</label>
							<input type="number" name="system.damage.value" value="{{ system.damage.value }}"
								class="resource-inputs" data-dtype="Number" />
						</div>
					</div>
				</section>
			</section>
			{{/if}}
		</div>
	</section>
</form>