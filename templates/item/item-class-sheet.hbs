<form class="{{ cssClass }} h-100" autocomplete="off">
    <div class="sheet-content-wrapper">
        {{> "systems/projectfu/templates/item/partials/item-header.hbs"}}

        {{!-- Sheet Wrapper --}}
        <div class="sheet-wrapper">

            {{!-- Sheet Body --}}
            <section class="sheet-body">

                {{!-- Effects Tab --}}
                <div class="tab effects" data-group="primary" data-tab="effects">
                    {{> 'systems/projectfu/templates/common/active-effects.hbs' hideHeader=true }}
                </div>

                {{!-- Description Tab --}}
                <div class="tab" data-group="primary" data-tab="description">
                    <fieldset class="desc title-fieldset resource-content">
                    {{editor enrichedHtml.description target="system.description" engine="prosemirror" rollData=rollData
                    button=true owner=owner editable=editable }}
                    </fieldset>
                </div>

                {{!-- Attributes Tab --}}
                <div class="tab attributes" data-group="primary" data-tab="attributes">

                    {{!-- General Info Section --}}
                    <fieldset class="title-fieldset desc resource-content grid-span-2 mb-5">

                        {{!-- Item Controls --}}
                        <div class="item-settings resource-content">
                            {{> "systems/projectfu/templates/item/partials/item-controls.hbs" dtypes=dtypes}}
                        </div>

                        {{!-- Class Benefits --}}
                        <div class="resource-content">

                            <div class="resource-content flexcol flex-group-start">
                                <label class="resource-label-m">{{localize 'FU.Level'}}</label>
                                <input type="text" name="system.level.value" value="{{ system.level.value }}"
                                    class="resource-inputs select-dropdown-l" />
                            </div>

                            <div class="flex-group-left resource-content">
                                <label class="resource-label-l flexcol">{{localize 'FU.Benefits'}}</label>
                                {{#each system.benefits.resources as |benefit key|}}
                                <label class="checkbox"> <span class="resource-label-sm">{{localize (translate
                                        key)}}</span><input type="checkbox" name="system.benefits.resources.{{ key }}.value" {{
                                        checked benefit.value }} />
                                </label>
                                {{/each}}
                            </div>

                            <div class="flex-group-left resource-content">
                                <label class="resource-label-l flexcol">{{localize 'FU.BenefitMartial'}}</label>
                                {{#each system.benefits.martials as |benefit key|}}
                                <label class="checkbox"> <span class="resource-label-sm">{{localize (translate
                                        key)}}</span><input type="checkbox" name="system.benefits.martials.{{ key }}.value" {{
                                        checked benefit.value }} />
                                </label>
                                {{/each}}
                            </div>

                            <div class="flex-group-left resource-content">
                                <label class="resource-label-l flexcol">{{localize 'FU.BenefitRitual'}}</label>
                                {{#each system.benefits.rituals as |benefit key|}}
                                <label class="checkbox"> <span class="resource-label-sm">{{localize (translate
                                        key)}}</span><input type="checkbox" name="system.benefits.rituals.{{ key }}.value" {{
                                        checked benefit.value }} />
                                </label>
                                {{/each}}
                            </div>
                        </div>
                    </fieldset>
                </div>
            </section>
        </div>
    </div>
</form>