{
	"id": "projectfu",
	"title": "Fabula Ultima (Project FU)",
	"description": "An Unofficial Fabula Ultima system for FoundryVTT!",
	"version": "#{VERSION}#",
	"compatibility": {
		"minimum": "10",
		"verified": "11",
		"maximum": "11"
	},
	"authors": [
		{
			"name": "zarick1342",
			"url": "https://github.com/zarick1342"
		},
		{
			"name": "serpuss"
		},
		{
			"name": "spyrella",
			"url": "https://github.com/spyrella"
		}
	],
	"scripts": [],
	"esmodules": ["module/projectfu.mjs"],
	"styles": ["styles/css/projectfu.css", "styles/css/rpg-awesome.css"],
	"packs": [],
	"languages": [
		{
			"lang": "en",
			"name": "English",
			"path": "lang/en.json"
		},
		{
			"lang": "it",
			"name": "Italian",
			"path": "lang/it.json"
		}
	],
	"relationships": {
		"requires": [
			{
				"id": "socketlib",
				"type": "module"
			}
		]
	},

	"flags": {
		"hotReload": {
			"extensions": ["css", "hbs", "json"],
			"paths": ["css", "lang", "templates"]
		}
	},
	"socket": true,
	"gridDistance": 5,
	"gridUnits": "ft",
	"primaryTokenAttribute": "resources.hp",
	"secondaryTokenAttribute": "resources.mp",
	"license": "LICENSE.txt",
	"changelog": "CHANGELOG.md",
	"url": "#{URL}#",
	"manifest": "#{MANIFEST}#",
	"download": "#{DOWNLOAD}#"
}
